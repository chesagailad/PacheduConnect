{
  "name": "pachedu-remittance",
  "version": "1.0.0",
  "description": "Cross-border remittance platform for Zimbabwean expatriates in South Africa",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "mobile",
    "chatbots/*",
    "admin-dashboard"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && PORT=5001 npm run dev",
    "dev:frontend": "cd frontend && PORT=3000 npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:reset": "cd backend && node scripts/reset-database-simple.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "remittance",
    "money-transfer",
    "zimbabwe",
    "south-africa",
    "fintech",
    "mobile-app",
    "web-app",
    "chatbot"
  ],
  "author": "Pachedu Team",
  "license": "MIT"
} 